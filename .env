# ==============================================================================
# 1. 基础安全配置 (Database & Redis Secret)
# ==============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456
POSTGRES_DB=agents_hub_development

# ==============================================================================
# 2. Rails 8 后端配置 (backend)
# ==============================================================================
# Rails 环境
RAILS_ENV=development
# 数据库连接：格式为 postgres://用户名:密码@服务名:端口/数据库名
DATABASE_URL=postgres://postgres:123456@db:5432/agents_hub_development
# Redis 连接：Sidekiq 会默认使用这个
REDIS_URL=redis://redis:6379/1
# Rails 密钥 (开发环境可以用这个，生产环境需要执行 bin/rails secret 生成)
SECRET_KEY_BASE=00fc1f49eceea5cc99fe8a6033516ef0

# ==============================================================================
# 3. FastAPI Agent 配置 (agent)
# ==============================================================================
# 向量数据库连接
QDRANT_URL=http://qdrant:6333
# 如果 Agent 也需要直连 Postgres (可选)
# AGENT_DATABASE_URL=postgresql+asyncpg://postgres:123456@db:5432/agents_hub_development

# ==============================================================================
# 4. 服务间通信 (Internal API Service Discovery)
# ==============================================================================
# Rails 调用 Python 的地址
AGENT_SERVICE_URL=http://agent:8000
# Python 调用 Rails 的地址 (内部接口)
BACKEND_INTERNAL_URL=http://backend:3000

# ==============================================================================
# 5. 第三方 AI 模型 Key
# ==============================================================================
DEEPSEEK_API_KEY=sk-xxxxxx